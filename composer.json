{
  "name": "apiki/back-end-challenge",
  "description": "Desafio para candidatos a back-end.",
  "type": "project",
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4",
    "codeception/codeception": "^3.0"
  },
  "license": "MIT",
  "scripts": {
    "test": "./vendor/bin/codecept run",
    "lint": "./vendor/bin/phpcs src/",
    "lint:fix": "./vendor/bin/phpcbf src/",
    "test-windows": "codecept run",
    "lint-windows": "phpcs src/",
    "lint-windows:fix": "phpcbf src/"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  }
}
